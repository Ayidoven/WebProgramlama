@model WebP.Models.Randevu

<h2>Yeni Randevu Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CalisanId">Çalışan</label>
        <input type="number" class="form-control" id="CalisanId" name="CalisanId" required />
    </div>
    <div class="form-group">
        <label for="MusteriAdi">Müşteri Adı</label>
        <input type="text" class="form-control" id="MusteriAdi" name="MusteriAdi" required />
    </div>
    <div class="form-group">
        <label for="TarihSaat">Tarih ve Saat</label>
        <input type="datetime-local" class="form-control" id="TarihSaat" name="TarihSaat" required />
    </div>
    <div class="form-group">
        <label for="Aciklama">Açıklama</label>
        <textarea class="form-control" id="Aciklama" name="Aciklama"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
