@model WebP.Models.Randevu

<h2>Randevu Sil</h2>

<p>Bu randevuyu silmek istediğinize emin misiniz?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Müşteri Adı</dt>
        <dd class="col-sm-10">@Model.Kullanıcıadı</dd>
        <dt class="col-sm-2">Tarih ve Saat</dt>
        <dd class="col-sm-10">@Model.Tarih</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Randevuid" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="List" class="btn btn-secondary">İptal</a>
</form>
