@model WebP.Models.Randevu

<h2>Randevu Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Randevuid" />
    <div class="form-group">
        <label for="CalisanId">Çalışan</label>
        <input type="number" class="form-control" id="CalisanId" asp-for="Calisanid" required />
    </div>
    <div class="form-group">
        <label for="MusteriAdi">Müşteri Adı</label>
        <input type="text" class="form-control" id="MusteriAdi" asp-for="Kullanıcıadı" required />
    </div>
    <div class="form-group">
        <label for="TarihSaat">Tarih ve Saat</label>
        <input type="datetime-local" class="form-control" id="TarihSaat" asp-for="Tarih" required />
    </div>
    
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
