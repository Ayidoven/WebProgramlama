@model Web_Programlama.Models.Çalışan

@{
    ViewData["Title"] = "Çalışan Sil";
}

<h1>@ViewData["Title"]</h1>

<p>Bu çalışanı silmek istediğinizden emin misiniz?</p>

<h4>Çalışan: @Model.adsoyad</h4>

<form method="post">
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Çalışan", "ÇalışanApi")" class="btn btn-secondary">İptal</a>
</form>
