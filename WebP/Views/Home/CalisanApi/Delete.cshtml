@model WebP.Models.Calisan

@{
    ViewData["Title"] = "Çalışan Sil";
}

<h1>@ViewData["Title"]</h1>

<p>Bu çalışanı silmek istediğinizden emin misiniz?</p>

<h4>Calisan: @Model.adsoyad</h4>

<form method="post">
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Calisan", "CalisanApi")" class="btn btn-secondary">İptal</a>
</form>
