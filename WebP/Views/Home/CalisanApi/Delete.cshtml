@model WebP.Models.Calisan

@{
    ViewData["Title"] = "Çalışan Sil";
}

<h1 style="color: white;">@ViewData["Title"]</h1>

<p style="color: white;">Bu çalışanı silmek istediğinizden emin misiniz?</p>

<h4 style="color: white;">Calisan: @Model.adsoyad</h4>

<form method="post">
    <button type="submit" class="btn btn-danger">Sil</button>
    <a href="@Url.Action("Calisan", "CalisanApi")" class="btn btn-secondary">İptal</a>
</form>
