@model WebP.Models.Kullanici

<h2>Kayıt Ol</h2>

<form method="post" action="/Kullanıcı/Başarılı">
    <div class="form-group">
        <label for="AdSoyad">Ad Soyad</label>
        <input type="text" class="form-control" id="AdSoyad" name="AdSoyad" value="@Model?.AdSoyad" required />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.AdSoyad)</span>
    </div>
    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model?.Email" required />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
    </div>
    <div class="form-group">
        <label for="Sifre">Şifre</label>
        <input type="password" class="form-control" id="Sifre" name="Sifre" required />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Sifre)</span>
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>
